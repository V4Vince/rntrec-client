{{#each housesData as |house|}}
<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content container">

        <!-- Street heading with link to house-details-->
        <div class="card-title">
          {{#link-to 'house' house.id}}
          <h4 class="center-align">
            {{house.street_name}}
            <!-- Make this clickable -->
            <i class="material-icons right">more_vert</i>
          </h4>
          {{/link-to}}
        </div>

        <div class="divider">
        </div>

        <!-- Revenue Line -->
        <div class="col s12 center-align">
          <h4 class="house-net-revenue">$12,032</h4>
          <p>NET REVENUE</p>
        </div>

        <!-- Two care panels-->
        <div class="row">
          <div class="col s12 m6">
            <div class="card-panel teal">
              <span class="white-text">I am a very simple card. I am good at containing small bits of information.
              I am convenient because I require little markup to use effectively. I am similar to what is called a panel in other frameworks.
              </span>
            </div>
          </div>

          <div class="col s12 m6">
            <div class="card-panel teal">
              <span class="white-text">I am a very simple card. I am good at containing small bits of information.
              I am convenient because I require little markup to use effectively. I am similar to what is called a panel in other frameworks.
              </span>
            </div>
          </div>
        </div>

        <div class="divider">
        </div>

    <!-- Ember helpers to determine actions based on if houses have units or not -->
    {{#if house.units}}

        {{#each house.units as |unit|}}
        <!-- Each unit will have a link -->
        {{#link-to 'unit' unit.id}}
        <div class="row">
          <div class="card-panel teal valign-wrapper">
            <div class="col s2">
              {{unit.unit_num}}
            </div>
            <div class="col s9">
              content here
            </div>
          </div>
        </div>
        {{/link-to}}
        {{/each}}


    {{else}}
        <!-- Shows add button if house does not have unit -->
        <div class="row">
          <div class="col s12">
            <div class="card-panel grey center-align">
              <p>You have not entered any units for this property</p>
              <!-- Currently links to new-property route.
                    Need to make link to new unit route Component -->
              {{#link-to 'new-property'}}
              <a class="waves-effect waves-light btn">Add Units</a>
              {{/link-to}}
            </div>
          </div>
        </div>

    {{/if}}

      </div> <!-- card-content-->
    </div>
  </div>
</div>
{{/each}}

<nav id="navigation-bar" class="container-fluid">
  {{#md-navbar name="RntRec" class='teal darken-1' homeRoute='index'}}
    <!-- A workaround to get the "active" class
      to apply to the active <li> automatically -->
    {{#if isAuthenticated}}
    <!--Link to all-houses-->
    {{#link-to 'houses' tagName='li'}}
      {{link-to 'Houses' 'houses'}}
    {{/link-to}}
    <!--Link to all-units-->
    {{#link-to 'units' tagName='li'}}
      {{link-to 'Units' 'units'}}
    {{/link-to}}
    <!--Link to change password-->
    {{#link-to 'change-password' tagName='li'}}
      {{link-to 'ChangePW' 'change-password'}}
    {{/link-to}}
    <!-- Log out button-->
    {{md-btn text='Log Out'
    	action='signOut'
    	class='btn-large red white-text text-darken-3'}}
    <!-- Show sign-in/sign-up if not authenticated-->
    {{else}}
    <!--Link to Sign-up-->
    {{#link-to 'sign-up' tagName='li'}}
      {{link-to 'Sign Up' 'sign-up'}}
    {{/link-to}}
    <!--Link to sign-in-->
    {{#link-to 'sign-in' tagName='li'}}
      {{link-to 'Login' 'sign-in'}}
    {{/link-to}}
    {{/if}}
  {{/md-navbar}}
</nav>

<!--Container where all other templates are injected-->
<main id="main-content" class="container">
  {{#each flashMessages.queue as |flash|}}
    {{flash-message flash=flash}}
  {{/each}}
  <!---Injected here-->
  {{outlet}}
  <!--FAB injected here-->
  {{floating-action}}
</main>

<!--Container where footer is injected-->
<div id="footer">
  {{application-footer}}
</div>


<div class="row">
  <div class="col s12">
    {{email-input email=credentials.email}}
    {{password-input password=credentials.password}}
    {{md-btn text='Sign In'
      action='submit'
      class='teal-darken-3
        white-text
        text-darken-3
        col s12
        sign-in-up-button'}}

      <div class="row hide-on-med-and-up">
        <div class="col s12">
          <button class="btn sign-in-up-button col s12">
            {{#link-to 'sign-up'}}
            Register!
            {{/link-to}}
          </button>
        </div>
      </div>

  </div>
</div>

{{email-input email=credentials.email}}
{{password-input password=credentials.password}}

{{md-check name="Remember me"
  checked=checkboxIsSelected
  for="remember"}}

{{md-btn text='Sign In'
  action='submit'
  class='blue white-text text-darken-3'}}

{{md-btn text='Cancel'
  action='reset'
  class='red white-text text-darken-3'}}

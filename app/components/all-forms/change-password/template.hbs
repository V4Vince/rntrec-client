{{#if newPassword}}
    {{#md-modal close='closeModal'}}
    <div class="modal-fixed-footer">
      <div class="modal-content center-align">
        <!-- Placeholder for body of modal-->
        <div class="container">
          <div class="form-group">
            {{md-input value=passwords.previous
                type='password'
                label='Old Password'
                class="col s12"
                validate=true}}
          </div>

          <div class="form-group">
            {{md-input value=passwords.next
                type='password'
                label='New Password'
                class="col s12"
                validate=true}}
          </div>
        </div>
      </div>
    </div>

    {{md-btn text='Change'
      action='changePassword'
      class='blue white-text text-darken-3'}}

    {{md-btn text='Cancel'
      action='reset'
      class='red white-text text-darken-3'}}
    {{/md-modal}}


{{/if}}

<!--Show if modalIsOpen is true-->
{{#if showContract}}
  {{#md-modal close='closeModal'}}
    <div class="modal-fixed-footer">
      <div class="modal-content">
        {{#if unitContract}}
        <div class="hasContract">
          <!-- Placeholder for title of modal-->
          <h5 class="flow-text">Lease Contract</h5>
          <h5>{{unitData.house.street_name}}</h5>
          <h4>Unit: {{unitData.unit_num}}</h4>
          <!-- Placeholder for body of modal-->
          <p>Term:
            <br>
            Start: {{unitContract.start}}
            <br>
            End: {{unitContract.start}}
            <br>
            Rent: {{unitContract.rent}}
            <br>
            Security: {{unitContract.security}}
          </p>
        </div>
        {{else}}
        <div class="noContract">
          <!-- Placeholder for title of modal-->
          <h5 class="flow-text">Lease Contract</h5>
          <h5>{{unitData.house.street_name}}</h5>
          <h4>Unit: {{unitData.unit_num}}</h4>
          <!-- Placeholder for body of modal-->
          <p>There's currently no lease contract for this unit.
          </p>
        </div>
        {{/if}}
      </div>
      <div class="modal-footer">
      {{!-- {{#link-to 'new-property'}}
      {{md-btn text='Create New Property'
        class='blue white-text text-darken-3'}}
      {{/link-to}} --}}
      {{md-btn action="load"}}
      </div>
    </div>
  {{/md-modal}}
{{/if}}

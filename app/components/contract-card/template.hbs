<!--Show if modalIsOpen is true-->
{{#if showContract}}
  {{#md-modal close='closeModal' class="contract-modal"}}
      <div class="contract-modal modal-content">
          <!-- Placeholder for title of modal-->
          <h5 class="flow-text">Current Contract</h5>
          <h5>{{unitData.house.streetName}}</h5>
          <h4>Unit: {{unitData.unitNum}}</h4>
          <p>Term:
            <br>
            Start: {{moment-format unitData.contract.start 'LL'}}
            <br>
            End: {{moment-format unitData.contract.end 'LL'}}
            <br>
            Rent: {{formatCurrency unitData.contract.rent}}
            <br>
            {{#if  unitData.contract.security}}
            Security: {{formatCurrency unitData.contract.security}}
            {{else}}
            Security: No security deposit for this unit
            {{/if}}
          </p>
      </div>
      <!-- SHould be edit button for contract.
           Button should open an options card.
           Options card  should have a position: fixed. -->
        {{md-btn text='Terminate Lease'
          action='deleteContract'
          class='red white-text text-darken-3'}}
  {{/md-modal}}
{{/if}}


<!--Show if modalIsOpen is true-->
{{#if showContractForm}}
  {{#md-modal close='closeModal' isFooterFixed=true}}
      <div class="modal-content">
        <div class="hasContract">
          <!-- Placeholder for title of modal-->
          <h5 class="flow-text">Add Contract</h5>
          <h5>{{unitData.house.streetName}}</h5>
          <h4>Unit: {{unitData.unitNum}}</h4>
          <!--Injects new-contract component-->
          {{all-forms/new-contract
           contractParams=contractParams }}
        </div>
      </div>
      <div class="modal-footer">
        {{md-btn text='Cancel'
          action='closeModal'
          class='red white-text text-darken-3'}}
        {{md-btn text='Create Lease'
          action='createContract'
          class='teal white-text text-darken-3'}}
      </div>
  {{/md-modal}}
{{/if}}
